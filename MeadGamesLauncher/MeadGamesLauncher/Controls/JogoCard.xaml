<UserControl x:Class="MeadGamesLauncher.Components.JogoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="180" Width="400" Margin="10">

    <Border CornerRadius="16" Background="#1E1E2F" Padding="12" 
            BorderBrush="#3A3A5A" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Ícone do jogo (imagem) -->
            <Image Source="{Binding CaminhoImagemCompleto}" Width="100" Height="100" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Margin="10" Stretch="UniformToFill" 
                   ClipToBounds="True" />

            <!-- Informações -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Nome}" FontSize="18" FontWeight="Bold" Foreground="White" />
                <TextBlock Text="{Binding Categoria}" FontSize="14" Foreground="#CCCCCC" Margin="0,2,0,0"/>
                <TextBlock Text="{Binding Autor, StringFormat=por {0}}" FontSize="12" Foreground="#888888" Margin="0,2,0,12"/>

                <Button x:Name="btnAcao"
                    Width="100" Height="30"
                    Background="#6495ED" Foreground="White"
                    FontWeight="Bold"
                    Click="btnAcao_Click"
                    HorizontalAlignment="Left"
                    BorderBrush="Transparent"
                    RenderTransformOrigin="0.5,0.5">    
                    <Button.RenderTransform>
                        <ScaleTransform x:Name="btnScale" ScaleX ="1" ScaleY="1"/>
                    </Button.RenderTransform>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    CornerRadius="8"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="1.05" Duration="0:0:0.1"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="1.05" Duration="0:0:0.1"/>
                                                <ColorAnimation Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#80B3FF" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="1.0" Duration="0:0:0.1"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="1.0" Duration="0:0:0.1"/>
                                                <ColorAnimation Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#6495ED" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>

                                <!-- Pressionado -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#4169E1"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
